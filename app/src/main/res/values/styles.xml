<resources>

    <style name="TextField" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextField.Subtitle1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextField.Body2">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextField.White" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextField.Header">
        <item name="android:textSize">@dimen/size_header_text</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextField.Header.Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_header_text</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="TextField.Popup">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/size_popup_text</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/size_button_text</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_bold</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/background_secondary_button</item>
        <item name="android:textColor">@color/vibrant_blue</item>
    </style>

    <style name="TextField.ListItem" />

    <style name="TextField.ListItem.PopularMovie">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/margin_popular_movie_text</item>
        <item name="android:layout_marginEnd">@dimen/margin_popular_movie_text</item>
        <item name="android:layout_marginTop">@dimen/margin_popular_movie_text</item>
    </style>

    <style name="TextField.ListItem.PopularMovie.Title">
        <item name="android:textAppearance">@style/TextField.Subtitle1</item>
    </style>

    <style name="TextField.ListItem.PopularMovie.Genre">
        <item name="android:textAppearance">@style/TextField.Body2</item>
        <item name="android:layout_marginTop">@dimen/margin_extra_small</item>
    </style>

    <style name="TextField.ReleaseDate">
        <item name="android:drawableStart">@drawable/ic_calendar</item>
        <item name="android:drawablePadding">@dimen/padding_popular_movie_drawable</item>
        <item name="android:textColor">@color/text_color_60</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextField.Rating" parent="TextField.White">
        <item name="android:background">@drawable/background_chip</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:drawableStart">@drawable/ic_star</item>
        <item name="android:drawablePadding">@dimen/padding_popular_movie_drawable</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_horizontal_chip</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal_chip</item>
        <item name="android:paddingTop">@dimen/padding_vertical_chip</item>
        <item name="android:paddingBottom">@dimen/padding_vertical_chip</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
